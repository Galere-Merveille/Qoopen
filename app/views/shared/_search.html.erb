  <div>
      <%= form_with url: search_results_path, method: :get, class: "d-flex" do %>
      <select class="form-select" aria-label="Métier" name="space_profession">
        <option selected label="Métier"></option>
        <option value="Coiffure">Coiffure</option>
        <option value="Esthétique">Esthétique</option>
        <option value="Barbier">Barbier</option>
      </select>
      <%= text_field_tag :query,
        params[:query],
        value: "#{params[:query]}",
        class: "form-control",
        placeholder: "Ville"%>
      <select id="durée" class="form-select" aria-label="Métier" name="space_profession">
        <option selected>Durée</option>
        <option value="1">Jours</option>
        <option value="2">Semaine</option>
        <option value="3">Mois</option>
      </select>
      <%= submit_tag "Rechercher", name: "Ville", class: "btn btn-primary", id: "rechercher" %>
    <% end %>
  </div>
