<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom border-success border-2">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
    <div class="logo-container">
      <%= image_tag("logo-white-quoopen.png", alt: "logo", class: "navbar-logo") %>
    </div>
  <% end %>

  <!-- Métier dropdown -->
  <div>
      <%= form_with url: root_path, method: :get, class: "d-flex" do %>
