<div class="container mt-4">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  label: "Prénom",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name" }%>
      <%= f.input :last_name,
                  label: "Nom de famille",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name" }%>
      <%= f.input :email,
                  label: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmez le mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :address,
                  label: "Adresse",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :postal_code,
                  label: "Code postal",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "postal_code" }%>
      <%= f.input :company_name,
                  label: "Entreprise",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "company_name" }%>
      <%= f.input :siret_number,
                  label: "Numéro de Siret",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "siret_number" }%>
      <%= f.label :user_profession, "Sélectionner une profession :" %>
      <%= f.select :user_profession,
                  options_for_select(['Coiffure', 'Esthétique', 'Barbier']),
                  { include_blank: '' },
                  required: true,
                  class: 'form-control' %><br >
      <%= f.label :phone_number, "Numéro de téléphone" %>
      <%= f.telephone_field :phone_number, class: 'form-control', required: true, pattern: "[0-9]{10}" %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary mt-2' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
