<div class="container">
  <h1>Mes réservations</h1>
  <div class="row">
    <% current_user.bookings.each do |booking| %>
      <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="card-bookings">
          <div class="booking-wrapper text-secondary">
            <h4><%= booking.space.address %></h4>
            <p>Status: <%= booking.status %></p>
            <%= cl_image_tag booking.space.photos.first.key, crop: :fill, class:"booking-img" %>
            <h5>Réservation faite le : </h5>
            <% booking.booking_dates.each do |booking_date| %>
              <p><%= booking_date.selected_day.strftime("%d" + "/" + "%m" + "/" + "%Y") %></p>
            <% end %>
            <p>Total: <%= booking.total_amount %> €HT</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Retour au tableau de bord", dashboards_path %>
</div>
