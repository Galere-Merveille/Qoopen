<p style="color: green"><%= notice %></p>
<div class="container">
 <!-- Filtres -->
    <%= form_tag("/filter", method: "get") do %>
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="form-check">
            <%= check_box_tag "filter[day]", "1", params.dig(:filter, :day) == "1", class: "form-check-input", id: "day-checkbox" %>
            <%= label_tag "day-checkbox", "Jour", class: "form-check-label" %>
          </div>
        </div>

        <div class="col-auto">
          <div class="form-check">
            <%= check_box_tag "filter[month]", "1", params.dig(:filter, :month) == "1", class: "form-check-input", id: "month-checkbox" %>
            <%= label_tag "month-checkbox", "Semaine", class: "form-check-label" %>
          </div>
        </div>

        <div class="col-auto">
          <div class="form-check">
            <%= check_box_tag "filter[week]", "1", params.dig(:filter, :week) == "1", class: "form-check-input", id: "week-checkbox" %>
            <%= label_tag "week-checkbox", "Mois", class: "form-check-label" %>
          </div>
        </div>
        <div class="col-auto">
          <%= submit_tag "Apply Filter", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

<h1>Spaces</h1>

<div id="spaces">
  <% @spaces.each do |space| %>
      <p>
        <strong>City:</strong>
        <%= space.city %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= space.address %>
      </p>

      <p>
        <strong>Space profession:</strong>
        <%= space.space_profession %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= space.description %>
      </p>

      <p>
        <strong>Price per day:</strong>
        <%= space.price_per_day %>
      </p>

      <p>
        <strong>Price per week:</strong>
        <%= space.price_per_week %>
      </p>

      <p>
        <strong>Price per month:</strong>
        <%= space.price_per_month %>
      </p>

      <p>
        <strong>User:</strong>
        <%= space.user_id %>
      </p>
    <p>
      <%= link_to "Show this space", space %>
    </p>
  <% end %>
 </div>
</div>
<%= link_to "New space", new_space_path %>
