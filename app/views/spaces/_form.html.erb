<%= simple_form_for(@space) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :city %>
    <%= f.input :address %>
    <%= f.input :space_profession, collection: ['Coiffure', 'Esthétique', 'Barbier', 'Cuisine', 'Salle de réunion'] %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :price_per_week %>
    <%= f.input :price_per_month %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Annuler", root_path, class: "btn btn-secondary" %>
  </div>
<% end %>
